<%- include('partials/header') %>




    <style>
        form {
            margin: 9rem 16rem;
        }
        
        #nav-tab {
            margin: 5rem 7rem;
        }
    </style><br><br><br><br>
    <h1 style="text-align: center; margin-top: 3rem; margin-bottom: 1rem;">Medicine <span style="color: #dc8cdb;">Donation Form</span></h1>

    <p style="margin: 1rem 1rem 0 10rem;"><strong style="font-size: 1.3rem; margin-left: 0.7rem;"> <span style="color: #dc8cdb;">You can donate medicine </span> here if they satisfy the following condition:</strong> </p>
    <p style="margin: 1rem 1rem 0 10rem;"> <strong>* Sealed / <span style="color: #dc8cdb;">
         Unopened.</span> <br> * 5+ months <span style="color: #dc8cdb;"> from expiration.</span> <br>* Non- <span style="color: #dc8cdb;">refrigerated.</span> <br>* Non- <span style="color: #dc8cdb;">controlled.</span> <br>* Understand there is a  <span style="color: #dc8cdb;">₹50 - ₹100+ shipping charge.</span> </strong>
    </p>

    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Individual Information</button>
            <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Medicine Information</button>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent">
        <div class="text-center my-2">
            <p id="reset_password_msg" class="text-success my-3">
                <%=Msg%>
            </p>
        </div>
        <form action="/medicine" method="post">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
            
                <!-- <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">Medicine Name</span>
                    <input type="text" class="form-control" placeholder="Medicine Name.." aria-label="Username" aria-describedby="basic-addon1">
                </div> -->

                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Enter Your Name" aria-label="Recipient's username" aria-describedby="basic-addon2" name="name" required>
                    <span class="input-group-text" id="basic-addon2">Name</span>
                </div>
                <div class="input-group mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                        <label class="form-check-label" for="flexRadioDefault1">
                      Individual
                    </label>
                    </div>

                    <div class="form-check">
                        <input style="margin-left: 10rem;" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                        <label class="form-check-label" for="flexRadioDefault2">
                      Organization
                    </label>
                    </div>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text">Address</span>
                    <textarea class="form-control" aria-label="With textarea" name="address" required></textarea>
                </div>

                <div class="input-group mb-3">
                    <input type="email" class="form-control" placeholder="Email Your Address" aria-label="Recipient's username" aria-describedby="basic-addon2" name="email" required>
                    <span class="input-group-text" id="basic-addon2">Email</span>
                </div>
                <!-- <div class="input-group mb-3" id="submit">
                    <input style="background-color: rgba(0, 0, 255, 0.753);" type="submit" class="form-control" value="Submit">
                </div> -->
           
        </div>
        <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon3" aria-label="Drug Name">If your order crossed more then ₹1000, then it'll be eligible for pickup by our delivery official, else please drop the package at the pickup location.</span>
                <!-- <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" name="medicine" required> -->
            </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon3" aria-label="Drug Name">Drug Name </span>
                    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" name="medicine" required>
                </div>

                <div class="input-group mb-3">

                    <input type="text" class="form-control" placeholder="Strength of Medicine" name="strength" required>
                    <span class="input-group-text">Strength of Medicine</span>
                </div>

                <!-- <div class="input-group mb-3">
                    <span class="input-group-text">Strength of Medicine</span>

                    <input type="text" class="form-control" aria-label="Strength">
                </div> -->

                <div class="input-group mb-3">


                    <input type="date" class="form-control" placeholder="Expire Date" aria-label="Expire Date" name="date" required>
                    <span class="input-group-text">Expire Date</span>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text">Quantity of Medicine</span>

                    <input type="number" class="form-control" aria-label="Quantity" name="quantity" required>
                </div>



                <div class="input-group mb-3" id="submit">
                    <input style="background-color:  #dc8cdb; color: #fff;" type="submit" class="form-control" value="Submit">
                </div>
            </form>
        </div>
    </div>
</body>
