<%- include('partials/header') %>

<script>
    function validateForm(form) {
      var name = document.forms["myForm"]["name"].value;
      if(name.length<5 || name.length>=30){
            alert("** Name length must be between 5 and 30!");
            return false;
        }
        if(form['name'].value.match(/[0-9]/)){
            alert("**Check Name - Only chararcters are allowed!");
            return false;
        }

        var phone = document.forms["myForm"]["phone"].value;
        if(phone.length!=10){
            alert("** Enter valid moblie no.");
            return false;
        }

        var password = document.forms["myForm"]["password"].value;
        var cpassword = document.forms["myForm"]["cpassword"].value;
        if(password != cpassword){
            alert("** Password are not matching");
            return false;
        }
        if(password.length<5 || password.length>=30){
            alert("** Password must be between 5 and 30");
            return false;
        }
        if(cpassword.length<5 || cpassword.length>=30){
            alert("** CPassword must be between 5 and 30");
            return false;
        }
    }
    </script>


    <form style="margin: 9rem 16rem;" action="/registration" method="POST" onsubmit="return validateForm(this)" name="myForm">
        <h1 style="color: #dc8cdb;">Register Here</h1>
        <div class="text-center my-2">
            <p id="reset_password_msg" class="text-danger my-3">
                <b><%=Msg%></b>
            </p>
        </div><br>
        <div class="input-group mb-3">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" name="usertype" value="Individual"> 
                <label class="form-check-label" for="flexRadioDefault1">
              Individual
            </label>
            </div>

            <div class="form-check">
                <input style="margin-left: 10rem;" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" name="usertype" checked value="Organization">
                <label class="form-check-label" for="flexRadioDefault2">
              Organization
            </label>
            </div>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1" for="name">Name</span>
            <input type="text" name="name" id="name" class="form-control" placeholder="Enter Your Name.." aria-label="Username" aria-describedby="basic-addon1" name="name" required >
            <span id="nameError" class="text-danger font-weight-bold"></span>
        </div>


        <div class="input-group mb-3">
            <input type="email" class="form-control" placeholder="Enter Your Email..." aria-label="Recipient's username" aria-describedby="basic-addon2" name="email" required>
            <span class="input-group-text" id="basic-addon2">Email</span>
        </div>
        <div class="input-group mb-3">
            <input type="number" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2" name="phone" required>
            <span class="input-group-text" id="basic-addon2">Contact Number</span>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Address</span>
            <textarea class="form-control" aria-label="With textarea" name="address" required></textarea>
        </div>
        <div class="input-group mb-3">
            <input type="password" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2" name="password" required>
            <span class="input-group-text" >Password</span>
        </div>
        <div class="input-group mb-3">
            <input type="password" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2" name="cpassword" required>
            <span class="input-group-text">Confirm Password</span>
        </div>
        

 
        <button type="submit" id="registerBtn" class="btn btn-primary my-3" value="Register" style="background-color: #dc8cdb; border: #dc8cdb;">Register</button>
        <div class="text-center">
            <p>If you have already Account! <a href="/login" class="text-primary"><strong style="color: #dc8cdb;">Login Here</strong></a>
            </p>
        </div>

    </form>
</body>



