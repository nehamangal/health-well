<%- include('partials/header') %>


<script>
    function validateForm(form) {
      var name = document.forms["myForm"]["name"].value;
      if(name.length<5 || name.length>=30){
            alert("** Name length must be between 5 and 30!");
            return false;
        }
        if(form['name'].value.match(/[0-9]/)){
            alert("** Only chararcters are allowed!");
            return false;
        }

        var phone = document.forms["myForm"]["phone"].value;
        if(phone.length!=10){
            alert("** Enter valid moblie no.");
            return false;
        }

        var address = document.forms["myForm"]["address"].value;
        if(address.length<=5){
            alert("** Enter valid address");
            return false;
        }
    }
</script>


    <form style="margin: 9rem 16rem;" action="/getdonation" method="POST" enctype="multipart/form-data" onsubmit="return validateForm(this)" name="myForm">
        <div class="text-center my-2">
            <p id="reset_password_msg" class="text-success my-3">
                <%=Msg%>
            </p>
        </div>
        <h1>Apply Here</h1><br>
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon3" aria-label="Drug Name">If your order crossed more then 1000, then it'll be eligible for delivery by our delivery officials, else please drop the package at the donation location.</span>
            <!-- <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" name="medicine" required> -->
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon3">Name</span>
            <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" name="name" required>
        </div>

        <div class="input-group mb-3">

            <input type="email" class="form-control" placeholder="Email Address" aria-label="Drug Name" name="emails" required>
            <span class="input-group-text">Email</span>
        </div>

        <div class="input-group mb-3">
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" name="usertype" value="Individual"> 
                <label class="form-check-label" for="flexRadioDefault1">
              Individual
            </label>
            </div>

            <div class="form-check">
                <input style="margin-left: 10rem;" class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" name="usertype" checked value="Organization">
                <label class="form-check-label" for="flexRadioDefault2">
              Organization
            </label>
            </div>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Phone Number</span>
            <input type="number" class="form-control" aria-label="Strength" name="phone" required>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text">Address</span>
            <textarea class="form-control" aria-label="With textarea" name="address" required></textarea>
        </div>

        

        <!-- <div class="input-group mb-3">
            <span class="input-group-text">Letter of Recommandation</span>

            <input type="file" class="form-control" aria-label="Quantity">
        </div> -->

        <div class="input-group mb-3">
            <input type="text" class="form-control" aria-label="Strength" placeholder="Enter name of medicines/appliances" name="type" required>
            <span class="input-group-text">Medicine/Appliances</span>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">Quantity</span>
            <input type="number" class="form-control" aria-label="Quantity" name="quantity" required>
        </div>

        <div class="input-group mb-3">
            <input type="file" class="form-control" aria-label="Expire Date" name="filename" id="prescription" required>
            <span class="input-group-text">Prescription</span>
        </div>
        <div class="input-group mb-3">
            <input type="file" class="form-control" aria-label="Expire Date" name="" id="prescription" required>
            <span class="input-group-text">Letter of Recommandation</span>
        </div>


        <div class="input-group mb-3" id="submit">
            <input style="background-color: #dc8cdb; color: #fff;" type="submit" class="form-control" value="Order">
        </div>
        <div class="input-group mb-3" id="submit">
            <input style="background-color: #dc8cdb; color: #fff;" type="submit" class="form-control" value="Rent">
        </div>
    </form>
</body>

